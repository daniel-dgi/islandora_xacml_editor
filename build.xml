<?xml version="1.0" encoding="UTF-8"?>

<project name="islandora_xacml_editor" default="build">
  
  <!-- Properties -->
  <property environment="env" />
  <property name="D6_MODS" value="${env.D6_MODS}" />
  <property name="D7_MODS" value="${env.D7_MODS}" />

  <target name="build">
    <exec dir="${D6_MODS}/islandora_xacml_editor" executable="drush">
      <arg line="test-run --xml=${basedir} 'Xacml Editor'" />
    </exec>
  </target>
</project>
